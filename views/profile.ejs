<%- include('partials/headerAuth') -%>


	<div class='profileInfoWrapper'>
		<div class='pfpDivider'>
			<div class='pfpBox'>
				<div class='profilePictureWrapper'>
					<img src="<%= user.profilePic%>" class='pfp'>
				</div>
			</div>
			
			<div class='pfpBtns'>
				<form action="/addPfp" enctype="multipart/form-data" method="POST">
					<button id='selectPicture'>Change
						<input type="file" id="pfpUpload" name="file">
					</button>
					<button type="submit" value="Upload" id="subPfp"></button>
				</form>
			</div>
		</div>
		<div class='textDivider'>
			<div class='profileTextWrapper'>
				<span><%= user.userName %></span>
			</div>
			<div class="profileInfoDivider"></div>
			<span>Email: <%= user.email %></span>
		</div>
	</div>

	<div class='friendsWrapper'>
		<h1>Friends</h1>
		<div class="friendList">
			<% for(var i=0; i<users.length; i++) {%>
				<div class="friendBox">
					<h2><%=users[i].userName %></h2>
					<a href="/profile/<%=users[i]._id%>"><img src="<%= users[i].profilePic%>" class='friendPicture'></a>
				</div>
			<% } %>
		</div>
	</div>


		
	
	
	<div class='addPostWrapper'>
		<form action="/post/createPost" enctype="multipart/form-data" method="POST">
			<h1>Add a post</h1>
			<input type="text" id="title" name="title" placeholder="Title">
			<textarea id="caption" name="caption" placeholder="Caption" maxlength="64"></textarea>
			<button id='selectFile'>Select File
				<input type="file" id="imageUpload" name="file">
			</button>
			<button type="submit" value="Upload">Submit</button>
		</form>
	</div>
	
	<div class='myPostsWrapper'>
		<h1>My Posts</h1>
		<ul>
			<% for(var i=0; i<posts.length; i++) {%>
				<li>
					<h2><%=posts[i].title %></h2>
					<a href="/post/<%=posts[i]._id%>"><img src="<%= posts[i].image%>" class='myPostsImg'></a>
				</li>
			<% } %>
		</ul>
	</div>
	<div class='returnToFeed'>
		<a href="/feed"><span>Return to Feed</span></a>
	</div>



<%- include('partials/footer') -%>