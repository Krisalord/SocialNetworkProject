<%- include('partials/headerNoAuth') -%>

<div class='signupWrapper'>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <script>
                alert("<%= el.msg %>");
            </script>
        <% }) %>    
    <% } %>
    <!-- <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div><%= el.msg %></div>
        <% }) %>    
    <% } %> -->
    <form action="/signup" method="POST" class='mainSignupBox'>
        <img src='/images/logoWhite.png'>
        <span class='signupSpan'>Sign Up to KLapp</span>
        <div>
            <input type="text" id="userName" name="userName" placeholder="User name">
        </div>
        <div>
            <input type="email" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="Email address">
        </div>
        <span id="emailHelp">We'll never share your email with anyone else.</span>
        <div>
            <input type="password" id="password" name="password" placeholder="Password">
        </div>
        <div>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
        </div>
        <button type="submit">Submit</button>
    </form>
</div>

